{
  "$schema": "http://json-schema.org/schema",
  "$id": "FourcastSchematics",
  "title": "Fourcast Options Schema",
  "type": "object",
  "description": "Says Hello to someone",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the person",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Who do we want to greet?"
    }
  },
  "required": [
    "name"
  ]
}
